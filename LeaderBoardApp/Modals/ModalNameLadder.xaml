<Window x:Class="LeaderBoardApp.Modals.ModalNameLadder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ModalNameLadder" Height="100" Width="300"
         WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox x:Name="tbLadderName"  Width="200" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90 10 0 0"/>
        <Label Content="Ladder Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" HorizontalContentAlignment="Right" Margin="0,10,0,0" />
        <Button Content="Done" Height="25" Width="75" Margin="54,50,172,25" Click="BtnDone_Click"/>
        <Button Content="Cancel" Height="25" Width="75" Margin="170,50,54,25" Click="BtnCancel_Click"/>
    </Grid>
</Window>
