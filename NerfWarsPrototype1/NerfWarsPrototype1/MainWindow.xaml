<Window x:Class="NerfWarsPrototype1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NerfWarsPrototype1"
        Title="MainWindow" Height="350" Width="525">
    <Grid Name="mainGrid">
        <TabControl>
            <TabItem Header="Registration" x:Name="tabReg">
                <Grid>
                    <local:RegistrationMenu x:Name="regMenu" Visibility="Visible"/>
                    <local:AddPlayer x:Name="regAddPlayer" Visibility="Hidden"/>
                    <local:AddTeam x:Name="regAddTeam" Visibility="Hidden"/>
                </Grid>
            </TabItem>
            <TabItem Header="Play">
                <Grid>
                    <local:GamePlay x:Name="playGame" Visibility="Visible" />
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
