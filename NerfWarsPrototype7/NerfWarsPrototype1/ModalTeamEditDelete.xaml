<Window x:Class="NerfWarsPrototype1.ModalTeamEditDelete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditTeamModal" Height="150" Width="210" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock x:Name="tblSelectATeam" Margin="10,10,0,0" TextWrapping="Wrap" Text="Select a team to edit" FontSize="15" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" Width="180"/>
        <Button x:Name ="btnModalTeamEdit"  Content="Edit" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" Width="75" Click="btnModalTeamEdit_Click"/>
        <Button x:Name ="btnEditTeamCancel" Content="Cancel" HorizontalAlignment="Left" Margin="115,89,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
